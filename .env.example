# ============================================================================
# Configuration Veridian AI Bot v0.0.1-beta - Template .env
# Copier ce fichier en .env et remplir avec vos valeurs
# ============================================================================

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_app_id_here
DISCORD_CLIENT_SECRET=your_discord_secret_here
BOT_OWNER_DISCORD_ID=your_discord_user_id_here
DISCORD_REDIRECT_URI=https://api.veridiancloud.xyz:201/auth/callback

# GroQ API (LLM) - 4 clés pour fallback automatique
# Utilisées selon le modèle et la fonctionnalité (voir cahier des charges)
GROQ_API_KEY_1=your_groq_api_key_1_here
GROQ_API_KEY_2=your_groq_api_key_2_here
GROQ_API_KEY_3=your_groq_api_key_3_here
GROQ_API_KEY_4=your_groq_api_key_4_here

# Database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=veridian_user
DB_PASSWORD=your_secure_db_password_here
DB_NAME=veridianai

# OxaPay Crypto Payment Gateway
OXAPAY_MERCHANT_KEY=your_oxapay_merchant_key_here
OXAPAY_WEBHOOK_SECRET=your_oxapay_webhook_secret_here

# PayPal Manual Payments
PAYPAL_EMAIL=your_paypal_business_email@gmail.com

# Dashboard & API Security
JWT_SECRET=your_very_long_random_jwt_secret_key_here_at_least_32_chars
INTERNAL_API_SECRET=your_internal_api_secret_key_here_minimum_32_chars

# API Configuration
API_HOST=localhost
API_PORT=201
API_DOMAIN=api.veridiancloud.xyz

# Dashboard URL
DASHBOARD_URL=https://veridiancloud.xyz/dashboard.html

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Environment (development, staging, production)
ENVIRONMENT=development
